<section id="chat">
    <h1>Chat - Coderhouse</h1>
    <div class="chat-container">
        <div id="chat-box">
            {{#each messages}}
            <div class="message">
                <p><strong>{{this.user}}:</strong></p>
                <p>{{this.message}}</p>
            </div>
            {{/each}}
        </div>
        <form class="chat__form" onsubmit="sendMessage(event)">
            <input type="text" name="message" id="message">
            <button>Send</button>
        </form>
    </div>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/chat.js"></script>